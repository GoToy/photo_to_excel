<p id="notice"><%= notice %></p>

<table class="table table-bordered">
<caption>Friend Request</caption>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users_requested.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Accept', accept_friendship_user_path(user) %></td>
        <td><%= link_to 'Decline', decline_friendship_user_path(user) %></td>  
       
       
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<table class="table table-bordered">
<caption>Become Friends</caption>
  <thead>
    <tr>
       <th>Name</th>
       <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users_become.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Request', make_friendship_user_path(user) %></td> 
       
       
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<table class="table table-bordered">
<caption>Pending Friends</caption>
    <thead>
     <tr>
       <th>Name</th>
     </tr>
   </thead>
  
    <tbody>
      <% @users_pending.each do |user| %>
        <tr>
         <td><%= user.username %></td>
  
 
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  
  <table class="table table-bordered">
  <caption>Friends</caption>
   <thead>
      <tr>
         <th>Name</th>
         <th></th>
     </tr>
    </thead>
 
   <tbody>
      <% @users_friends.each do |user| %>
      <tr>
       <td><%= user.username %></td>
       <td><%= link_to 'Remove', remove_friendship_user_path(user), :method => :delete  %></td>
 
  
      </tr>
   <% end %>
  </tbody>
 </table> 
 
 <br>

